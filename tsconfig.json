{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", ".vscode-test"]
}
