{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2023",
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"],
}
