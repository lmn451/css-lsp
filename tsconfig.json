{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "server/out",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
	},
	"exclude": ["node_modules", ".vscode-test"]
}
